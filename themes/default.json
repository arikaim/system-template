{
    "navigation": {
        "panel": "-ml-12 xs:-ml-4 md:-ml-12 mt-18 my-8 inline-block bg-stone-50 py-4 px-2 rounded-xl rounded-r-full shadow-sm" 
    },
    "grid": {        
        "six": "grid items-stretch grid-cols-6 xl:grid-cols-6 lg:grid-cols-5 md:grid-cols-3 sm:grid-cols-1 gap-4",
        "ten": "grid items-stretch grid-cols-10 lg:grid-cols-10 md:grid-cols-5 sm:grid-cols-2 gap-4",
        "five": "grid items-stretch grid-cols-5 lg:grid-cols-5 md:grid-cols-3 sm:grid-cols-1 gap-4"
    },
    "card": {
        "default": "flex flex-col p-4 w-full border border-stone-200 shadow-sm"
    },
    "table": {
        "field": {
            "label": "font-bold"
        },
        "default": "table",
        "class": "table table-xs",
        "details": "able table-sm table-borderless"
    },
    "list": {
        "flush": "divide-base-content/25 w-96 divide-y *:p-2",
        "default": "border-base-content/25 divide-base-content/25 divide-y rounded-md border *:p-3 *:first:rounded-t-md *:last:rounded-b-md"
    },
    "panel": "shadow-xs p-4 border border-gray-200 rounded",
    "form": {
        "icon": {
            "size": "h-6 w-6",
            "class": "my-auto shrink-0 me-3",
            "color": "text-sky-500"
        },       
        "label": "label-text font-bold dark:text-gray-200",
        "checkbox": "checkbox-sm checkbox checkbox-default",
        "field": "field relative mt-2",
        "value": "text-gray-700",
        "fields": "grid grid-cols-2 gap-8 md:grid-cols-2 xs:grid-cols-1",
        "textarea": "textarea dark:text-gray-200 dark:bg-gray-700",   
        "input": "input dark:text-gray-200 dark:bg-gray-700 dark:border-gray-500",           
        "select": "select"           
    },
    "details": {
        "label": "font-bold uppercase text-sm text-stone-500",
        "value": "flex rounded-xl bg-white p-2 text-stone-800",
        "item": "flex flex-col my-1",
        "cols2": "flex flex-row items-start",
        "icon": {
            "size": "h-5 w-5",
            "color": "text-stone-500"
        }
    },
    "search": {
        "icon": {
            "size": "h-5 w-5",
            "color": "text-stone-500"
        },
        "input": "w-full py-1.5 pl-8 pr-24 border border-solid rounded-xl border-stone-200 placeholder-stone-300 focus:border-sky-300 focus:border focus:border-solid focus:outline-hidden hover:border-sky-300 transition duration-1000 ease-in-out",
        "button": "text-white bg-linear-to-r from-sky-400 via-sky-500 to-sky-600 hover:bg-linear-to-br focus:ring-4 focus:outline-hidden focus:ring-sky-300 dark:focus:ring-sky-800 font-medium rounded-lg text-sm px-4 py-1 text-center"
    },
    "buttons": {
        "default": "btn btn-sm btn-secondary btn-outline",
        "delete": "btn btn-sm btn-error btn-outline",
        "green": "btn btn-sm btn-outline btn-success text-gray-800",
        "primary": "btn btn-info btn-sm btn-outline",
        "icon": "btn btn-text btn-sm btn-square"
    },
    "paginator": {
        "panel": "p-1 mt-2",
        "buttons": "btn-xs btn-outline"
    },
    "link": {
        "menu": "cursor-pointer transition duration-1000 ease-in-out hover:text-green-500"
    },
    "page": {
        "size": "w-3/4 xs:w-full sm:w-full md:w-full xl:w-3/4 lg:w-3/4 mx-auto",
        "color" : "bg-gray-50 dark:bg-gray-950",
        "content": "bg-gray-50 dark:bg-gray-950"
    },
    "icons": {
        "title": {
            "size": "h-6 w-6",
            "width": 2,
            "color": "text-orange-500"
        },
        "badge": {
            "size": "h-4 w-4",
            "width": 1,
            "color": "text-orange-500"
        },
        "green": {
            "size": "h-5 w-5",
            "width": 2,
            "color": "text-green-500"
        },
        "menu": {
            "size": "h-6 w-6",
            "width": 2,
            "class": "tooltip-toggle cursor-pointer transition duration-1000 ease-in-out",
            "color": "text-amber-500 hover:text-green-500"
        },
        "indicator": {
            "size": "h-5 w-5",
            "class": "hover:text-green-500 cursor-pointer transition duration-1000 ease-in-out",
            "color": "text-green-500"
        },
        "file": {
            "size": "h-6 w-6",
            "class": "cursor-pointer focus:text-stone-800 transition duration-1000 ease-in-out",
            "color": "text-sky-500"
        },
        "enabled": {
            "size": "h-6 w-6",
            "class": "cursor-pointer focus:text-red-800 transition duration-1000 ease-in-out",
            "color": "text-green-500"
        },
        "action": {
            "size": "h-6 w-6",
            "width": 2,
            "class": "cursor-pointer focus:text-sky-800 transition duration-1000 ease-in-out",
            "color": "text-sky-500"
        },
        "delete": {
            "size": "h-6 w-6",
            "width": 2,
            "class": "cursor-pointer focus:text-red-800 transition duration-1000 ease-in-out",
            "color": "text-red-500"
        },
        "disabled": {
            "size": "h-6 w-6",
            "color": "text-gray-400"
        },
        "gray": {
            "size": "h-6 w-6",
            "width": 2,           
            "color": "text-gray-400"
        },
        "footer": {
            "size": "h-5 w-5",         
            "color": "text-gray-400"
        }
    }
}